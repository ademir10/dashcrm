<%- model_class = Advice -%>
<div class="page-header">
  <h1>Conselhos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('descrição do conselho') %></th>
      <th><%= model_class.human_attribute_name('tipo de conselho') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @advices.each do |advice| %>
      <tr>
        <td><%= link_to advice.description, advice_path(advice) %></td>
        <td><%= advice.type_advice %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_advice_path(advice), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      advice_path(advice),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_advice_path,
            :class => 'btn btn-primary' %>
