
<%= form_for @airsearch, :html => { :class => "form-horizontal airsearch" } do |f| %>

  <% if @airsearch.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@airsearch.errors.count, "error") %> prohibited this airsearch from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @airsearch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :client, :class => 'form-control' %>
    </div>
    <%=f.error_span(:client) %>
  </div>
  <div class="form-group">
    <%= f.label 'Celular', :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :phone, :class => 'form-control', id: 'celphone' %>
    </div>
    <%=f.error_span(:phone) %>
  </div>
<h4>Question√°rio</h4>
 
  <div class="form-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">
                <%= @question1.description %>
            </h1>
        </div>
        <div class="panel-body">
  <%= f.collection_radio_buttons :q1, Answer.where(question_id: @question1.id), :id, :description %>
  </div>
  </div>
  <%=f.error_span(:q1) %>
  </div>
  
  <div class="form-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">
                <%= @question2.description %>
            </h1>
        </div>
        <div class="panel-body">
  <%= f.collection_radio_buttons :q2, Answer.where(question_id: @question2.id), :id, :description %>
  </div>
  </div>
  <%=f.error_span(:q2) %>
  </div>

  <div class="form-group">
