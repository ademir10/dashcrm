  <style type="text/css">
	@media print {
    #hide_buttom {
        display :  none;
    }
}
</style>

<!-- INSERI ESSA VERIFICAÇÃO DE AMBIENTE PRA CARREGAR OS PDF'S TANTO LOCALMENTE QUANTO NO HEROKU -->
<% if Rails.env.development? %>
  <style type="text/css">
    <%= Rails.application.assets.find_asset('application.css').to_s.html_safe %>
</style>
<% end %>

<%- model_class = Airsearch -%>
<%= image_tag "logo_rpt.png" %>
<div class="page-header">
  <h1>Dados da Pesquisa</h1>
</div>

<dl class="dl-horizonta l">
  <h4><strong><%= model_class.human_attribute_name('cliente') %>:</strong>&nbsp;<%= @airsearch.client %><br />
  <strong><%= model_class.human_attribute_name('celular') %>:</strong>&nbsp;<%= @airsearch.phone %></h4>
  <hr />
  <h2>Respostas</h2>
    
  <h5 class="form-group"><strong><%= @question1.description %>:</strong>&nbsp; <%= @q1.description %><br />
  <strong><%= @question2.description %>:</strong>&nbsp; <%= @q2.description %><br />
  <strong><%= @question3.description %>:</strong>&nbsp; <%= @q3.description %><br />
  </h5>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              airsearches_path, :class => 'btn btn-default', id: 'hide_buttom' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airsearch_path(@airsearch), :class => 'btn btn-default', id: 'hide_buttom' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airsearch_path(@airsearch),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger', id: 'hide_buttom' %>
<button type="button" id ="hide_buttom" class="btn btn-success", onclick ="window.print();return false;">Imprimir</button>
              
<h2>Resultado: <%= @total_score %> pontos</h2>
  
  <% if @total_score > 0 && @total_score <= 2 %>
  <div class="panel panel-success">
  <div class="panel-heading" >Cliente do tipo: FRIO </div>
  <div class="panel-body">
  <!--
  <% @advices.each do |f| %>
  <%= f.description %><br />
  <% end %>
  -->
  </div>
  <% elsif @total_score >= 3 && @total_score <= 6 %>
  <div class="panel panel-warning">
  <div class="panel-heading">Cliente do tipo: MORNO </div>
  <div class="panel-body">
 
  </div>
  <% elsif @total_score >= 7 && @total_score <= 10 %>
  <div class="panel panel-danger">
  <div class="panel-heading">Cliente do tipo: QUENTE </div>
  <div class="panel-body">
  
  </div>
  <% end %>
  
  </div>
  </div>


