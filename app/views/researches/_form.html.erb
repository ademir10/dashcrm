<%= form_for @research, :html => { :class => "form-horizontal research" } do |f| %>

  <% if @research.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@research.errors.count, "error") %> prohibited this research from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @research.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Categoria', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.collection_select(:category_id, @categories, :id, :name, {include_blank: 'Selecione a categoria da pesquisa'},:class => 'form-control') %>

    </div>
    <%=f.error_span(:category_id) %>
  </div>
  <div class="form-group">
    <%= f.label 'nome do cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :client, :class => 'form-control' %>
    </div>
    <%=f.error_span(:client) %>
  </div>
  <div class="form-group">
    <%= f.label 'celular', :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :cellphone, :class => 'form-control', id: 'celphone' %>
    </div>
    <%=f.error_span(:cellphone) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                researches_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
