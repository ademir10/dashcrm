<table class="table table-striped">
  <thead>
    <tr>
      <th> <%= 'Descrição da resposta' %></th>
           
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      
    </tr>
  </thead>
  <tbody>
 
 	<% @advice.targets.each do |target| %>
        <tr>
        <td><%= target.answer_id %></td>
        <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")), [target.advice, target], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' %>
		</td>
        </tr>
      <% end %>
       </tbody>
       
   </table>


